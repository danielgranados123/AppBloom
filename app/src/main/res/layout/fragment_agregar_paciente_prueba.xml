<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment_agregar_paciente_prueba">

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="411dp"
        android:layout_height="128dp"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="640dp"
        android:src="@drawable/borde_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Agregar Paciente:"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="625dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView13"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="414dp"
                android:layout_height="50dp"
                android:src="@drawable/bg_fondo_blanco"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnGuardarPaciente" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Información Personal:"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.236"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/txtNombrePaciente"
                android:layout_width="311dp"
                android:layout_height="46dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/bg_form"
                android:ems="10"
                android:fontFamily="@font/poppins_medium"
                android:hint="Nombres"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView19" />

            <EditText
                android:id="@+id/txtApellidoPaciente"
                android:layout_width="311dp"
                android:layout_height="46dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_form"
                android:ems="10"
                android:fontFamily="@font/poppins_medium"
                android:hint="Apellidos"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtNombrePaciente" />

            <EditText
                android:id="@+id/txtEdadPaciente"
                android:layout_width="311dp"
                android:layout_height="46dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_form"
                android:ems="10"
                android:fontFamily="@font/poppins_medium"
                android:hint="Edad"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtApellidoPaciente" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Información Médica:"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.221"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView9" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Enfermedad que padece"
                android:textColor="#747474"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.237"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView20" />

            <Spinner
                android:id="@+id/txtEnfermedadPaciente"
                android:layout_width="311dp"
                android:layout_height="46dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/bg_form"
                android:backgroundTintMode="add"
                android:drawableRight="@drawable/ic_down_spinner"
                android:ems="10"
                android:foreground="@drawable/ic_down_spinner"
                android:foregroundGravity="center|right"
                android:foregroundTint="@color/black"
                android:hint="Enfermedad"
                android:inputType="text"
                android:paddingLeft="16dp"
                android:theme="@style/SpinnerFuente"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView20" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="92dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Medicamento recetado"
                android:textColor="#747474"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.228"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView20" />

            <Spinner
                android:id="@+id/txtMedicamentosPaciente"
                android:layout_width="161dp"
                android:layout_height="44dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/bg_form"
                android:backgroundTintMode="add"
                android:drawableRight="@drawable/ic_down_spinner"
                android:ems="10"
                android:foreground="@drawable/ic_down_spinner"
                android:foregroundGravity="center|right"
                android:foregroundTint="@color/black"
                android:hint="Medicamento"
                android:inputType="text"
                android:paddingLeft="16dp"
                android:theme="@style/SpinnerFuente"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.201"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtEnfermedadPaciente" />

            <EditText
                android:id="@+id/txtControlPaciente"
                android:layout_width="133dp"
                android:layout_height="44dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/bg_form"
                android:ems="10"
                android:focusable="false"
                android:fontFamily="@font/poppins_medium"
                android:hint="Hora"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtEnfermedadPaciente" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Información Hospitalaria:"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.278"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView10" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Habitación"
                android:textColor="#747474"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.155"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView24" />

            <Spinner
                android:id="@+id/spHabitacionPaciente"
                android:layout_width="161dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_form"
                android:backgroundTintMode="add"
                android:drawableRight="@drawable/ic_down_spinner"
                android:ems="10"
                android:foreground="@drawable/ic_down_spinner"
                android:foregroundGravity="center|right"
                android:foregroundTint="@color/black"
                android:hint="Habitación"
                android:inputType="text"
                android:paddingLeft="16dp"
                android:theme="@style/SpinnerFuente"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.201"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView25" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Cama"
                android:textColor="#747474"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.635"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView24" />

            <Spinner
                android:id="@+id/spCamasPaciente"
                android:layout_width="133dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_form"
                android:backgroundTintMode="add"
                android:drawableRight="@drawable/ic_down_spinner"
                android:ems="10"
                android:foreground="@drawable/ic_down_spinner"
                android:foregroundGravity="center|right"
                android:foregroundTint="@color/black"
                android:hint="Habitación"
                android:inputType="text"
                android:paddingLeft="16dp"
                android:theme="@style/SpinnerFuente"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.822"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView25" />

            <Button
                android:id="@+id/btnGuardarPaciente"
                android:layout_width="142dp"
                android:layout_height="48dp"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/borde_card"
                android:fontFamily="@font/poppins_bold"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Guardar"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/imageView14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spHabitacionPaciente" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvMedicamentos"
                android:layout_width="309dp"
                android:layout_height="42dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtMedicamentosPaciente" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="319dp"
                android:layout_height="1dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/linea_gris_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtEdadPaciente" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="319dp"
                android:layout_height="1dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/linea_gris_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rcvMedicamentos" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
